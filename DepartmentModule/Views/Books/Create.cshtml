@model DepartmentModule.Models.Book

@{
    ViewData["Title"] = "Create";
}


<br />


    <div class="container">
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <div class="input-group">
                    <input type="hidden" name="search_param" value="all" id="search_param">
                    <input type="text" class="form-control" name="x" placeholder=".ppt pdf doc docx Search for Google...">
                    <span  class="input-group-btn">
                        <a asp-controller="Books" asp-action="GoogleSearch"  class="btn btn-success">
                            <span  class="glyphicon glyphicon-search">                              
                            </span>
                        </a>
                        
                    </span>

                </div>
            </div>
        </div>
    </div>
<br>
<table class="table table-hover">
    <tr class="table-active">
        <th >
            Name
        </th>
        <th>
            Url
        </th>
        <th>

        </th>
    </tr>
    <tbody>
        @foreach (var item in ViewBag.fun)
        {

            <tr class="table-light">
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Url
                </td>
                <td width="60px">
                    <a asp-controller="Books" asp-action="Save" asp-route-id="@item.Id" class="btn btn-primary">
                        +
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />



 

    <div>
        <a asp-action="Index">Back to List</a>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
