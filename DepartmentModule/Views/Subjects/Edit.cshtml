@model DepartmentModule.Models.Subject

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                            <label asp-for="Program" class="control-label"></label>
            <div class="form-group card">
                <table cellpadding="10">
                    <tr>
                        <td>
                            <label asp-for="Program.Name" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Program.Name" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Program.Url" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Program.Name" name="programFile" type="file"  />
                        </td>
                    </tr>

                </table>
            </div>
                            <label asp-for="Themes" class="control-label"></label>
            <div class="form-group card">
                <table cellpadding="10">
                   
                    <tr>
                        <td>
                            <label asp-for="Themes.Name" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Themes.Name" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Themes.Url" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Themes.Name" name="themesFile" type="file" />
                        </td>
                    </tr>

                </table>
            </div>
            <div class="form-group">
                <label asp-for="Literatures" class="control-label"></label>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>

                            <td>
                                Name
                            </td>
                            <td>
                                <a  asp-controller="Books" asp-action="AddLiterature" class="btn btn-primary ">Add New</a>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.Literatures)
                        {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            
                            <td>
                                <a asp-controller="Books" asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                                <a asp-controller="Books" asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Details</a>
                                <a asp-controller="Books" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>

            </div>
            
            <div class="form-group">
               <label asp-for="AdditionalLiteratures" class="control-label"></label>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <td>
                                Name
                            </td>

                            <td>
                                <a asp-controller="Books" asp-action="AddAdditionalLiterature" class="btn btn-primary ">Add New</a>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.AdditionalLiteratures)
                        {
                        <tr>
                            <td>
                                @item.Name
                            </td>

                            <td>
                                <a asp-controller="Books" asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                                <a asp-controller="Books" asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Details</a>
                                <a asp-controller="Books" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>

            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
