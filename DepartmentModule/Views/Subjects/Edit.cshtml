@model DepartmentModule.Models.Subject

@{
    ViewData["Title"] = "Tahrirlash";
}

<h1>Tahrirlash</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubjectID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                            <label asp-for="Program" class="control-label"></label>
            <div class="form-group card">
                <table cellpadding="10">
                    <tr>
                        <td>
                            <label asp-for="Program.Name" class="control-label"></label>
                        </td>
                        <td >
                            <input readonly="readonly"  asp-for="Program.Name" class="form-control" />
                      
                        </td>
                        <td>
                            <a asp-controller="Books" asp-action="AddProgram" class="btn btn-primary">Tanlash</a>
                            <a asp-controller="Books" asp-action="AddProgram" class="btn btn-primary">Ochish</a>
                        </td>
                    </tr>
                    

                </table>
            </div>
                            <label asp-for="Themes" class="control-label"></label>
            <div class="form-group card">
                <table cellpadding="10">
                   
                    <tr>
                        <td>
                            <label asp-for="Themes.Name" class="control-label"></label>
                        </td>
                        <td>
                            <input readonly="readonly" asp-for="Themes.Name" class="form-control" />
                        </td>
                        <td>
                            <a asp-controller="Books" asp-action="AddThemes" class="btn btn-primary">Tanlash</a>
                        </td>
                    </tr>

                </table>
            </div>
            <div class="form-group">
                <label asp-for="Literatures" class="control-label"></label>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>

                            <td>
                                Name
                            </td>
                            <td>
                                <a  asp-controller="Books" asp-action="AddLiterature" class="btn btn-primary ">Yangi qo'shish</a>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.Literatures)
                        {
                        <tr>
                            <td>
                                @item.Literature.Name
                            </td>
                            
                            <td>
                                <a asp-controller="Books" asp-action="Details" class="btn btn-success" asp-route-id="@item.Literature.BookID">Ma'lumot</a>
                                <a asp-controller="Subjects" asp-action="RemoveLiterature" class="btn btn-danger" asp-route-id="@item.Literature.BookID">O'chirish</a>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>

            </div>
            
            <div class="form-group">
               <label asp-for="AdditionalLiteratures" class="control-label"></label>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <td>
                                Nomi
                            </td>

                            <td>
                                <a asp-controller="Books" asp-action="AddAdditionallLiterature" class="btn btn-primary ">Yangi qo'shish</a>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.AdditionalLiteratures)
                        {
                        <tr>
                            <td>
                                @item.AdditionalLiterature.Name
                            </td>

                            <td>
                                <a asp-controller="Books" asp-action="Details" class="btn btn-success" asp-route-id="@item.AdditionalLiterature.BookID">Ma'lumot</a>
                                <a asp-controller="Subjects" asp-action="RemoveAdditionalLiterature" class="btn btn-danger" asp-route-id="@item.AdditionalLiterature.BookID">O'chirish</a>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>

            </div>
            

            <div class="form-group">
                <input type="submit" value="Saqlash" class="btn btn-primary"  />
            </div>
        </form>


<div>
    <a asp-action="Index">Ro'yxatga qaytish</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
