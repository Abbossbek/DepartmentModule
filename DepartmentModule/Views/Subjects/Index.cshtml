@model IEnumerable<DepartmentModule.Models.Subject>

@{
    ViewData["Title"] = "Bosh sahifa";
}

<p>
    <a class="btn btn-info" asp-action="Create">Yangi yaratish</a>
</p>

<table class="table table-hover table-bordered"  width="100%">
    <colgroup span="1">
        <col span="1" Width="1">
        <col span="1" Width="2">
        <col span="1" width="2">
        <col span="1" width="2">
        <col span="1" width="2">
        <col span="1" width="1">
    </colgroup>
    <thead>
        <tr class="table-active">
            <th class="text-xl-center" rowspan="2" >
                Fan Nomi
            </th>
            <th class="text-xl-center" rowspan="2" >
                Fan Dasturi
            </th>
            <th class="text-xl-center" rowspan="2">
                Fan Mavzusi
            </th>
            <th colspan="2" class="text-center">
                Adabiyotlar
            </th>
            <th class="text-xl-center" rowspan="2">

            </th>
        </tr>

        <tr class="table-active text-center align-content-center">
            <td>
                Asosiy
            </td>
            <td>
                Qo'shimcha
            </td>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Name
                </td>
                <td>
                    @item.Program?.Name
                </td>
                <td>
                    @item.Themes?.Name
                </td>
                <td>
                    @if (item.Literatures != null)
                    {
                        @foreach (var literature in item.Literatures)
                        {
                            <div class="badge badge-secondary">
                                @literature.Literature.Name
                            </div>
                        }
                    }
                </td>
                <td>
                    @if (item.AdditionalLiteratures != null)
                    {
                        @foreach (var literature in item.AdditionalLiteratures)
                        {
                            <div class="badge badge-secondary">
                                @literature.AdditionalLiterature?.Name
                            </div>
                        }
                    }
                </td>


                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.SubjectID">Tahrirlash</a>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.SubjectID">Ma'lumot</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SubjectID">O'chirish</a>
                </td>
            </tr>
        }
    </tbody>
</table>





