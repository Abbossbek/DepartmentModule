@model IEnumerable<DepartmentModule.Models.Subject>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>

<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-active">
            <th class="text-xl-center" rowspan="2">
                Fan Nomi
            </th>
            <th class="text-xl-center" rowspan="2">
                Fan Dasturi
            </th>
            <th class="text-xl-center" rowspan="2">
                Fan Mavzusi
            </th>
            <th colspan="2" class="text-center">
                Adabiyotlar
            </th>
            <th class="text-xl-center" rowspan="2">

            </th>
        </tr>

        <tr class="table-active text-center align-content-center">
            <td>
                Asosiy
            </td>
            <td>
                Qo'shimcha
            </td>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Name
                </td>
                <td>
                    @item.Program?.Name
                </td>
                <td>
                    @item.Themes?.Name
                </td>
                <td style="max-width:150px;">
                    @if (item.Literatures!=null)
                    {
                    @foreach (var literature in item.Literatures)
                        {
                        <div class="badge badge-secondary">
                            @literature.Book.Name
                        </div>
                        }
                    }
                </td >


                <td style="max-width150px"> 
                    @if (item.AdditionalLiteratures!=null)
                    {
                         @foreach (var literature in item.AdditionalLiteratures)
                    {
                        <div class="badge badge-secondary">
                            @literature.Book.Name
                        </div>
                    }
                    }
                </td>


                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.SubjectID">Edit</a> 
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.SubjectID">Details</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SubjectID">Delete</a>
                </td>
            </tr>
        }
        </tbody>
</table>





